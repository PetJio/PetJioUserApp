<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background color layer -->
    <item android:drawable="@color/launch_background" />

    <!-- centered app icon; smaller inset -> larger icon. Adjust inset values to change size. -->
    <item>
        <inset
            android:insetLeft="40dp"
            android:insetTop="120dp"
            android:insetRight="40dp"
            android:insetBottom="120dp">
            <bitmap
                android:gravity="center"
                android:src="@mipmap/ic_launcher" />
        </inset>
    </item>
</layer-list>
